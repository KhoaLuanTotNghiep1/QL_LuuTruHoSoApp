
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/imgTL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffff"
                android:textSize="20dp" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAnh"
            android:layout_width="265dp"
            android:layout_height="233dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên"/>

        <TextView
            android:id="@+id/txtTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông Báo V/v phát thẻ BHYT năm 2019(đợt 1)"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vị Trí"/>

        <TextView
            android:id="@+id/txtVTri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Tủ lưu trữ sô 1 kệ công nghệ Khoa hộp số 2 hồ sơ BHYT"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày Tạo "/>

        <TextView
            android:id="@+id/txtNgTao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="15/6/2020"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>